<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/home_id_userinfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_size_16"
        android:text="http://blog.csdn.net/u010392352/" />

    <TextView
        android:id="@+id/home_id_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/home_id_userinfo_tv"
        android:layout_marginBottom="@dimen/dp_size_5"
        android:layout_marginTop="@dimen/dp_size_10"
        android:text="chenjiewei" />

    <com.cjw.chiyu.ui.view.CircleImageView
        android:id="@+id/home_id_userportrait_ci"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/home_id_username_tv"
        android:layout_marginTop="16dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />
</RelativeLayout>