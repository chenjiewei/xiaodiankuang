<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_brown_800"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_size_0"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_size_32"
        android:paddingRight="@dimen/dp_size_32"
        android:text="心灵砒霜"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/sp_size_28" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_0"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_size_16"
            android:paddingRight="@dimen/dp_size_16"
            android:src="@mipmap/cy_intro_1" />
    </LinearLayout>

    <TextView
        android:id="@+id/cy_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_size_0"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_size_64"
        android:paddingRight="@dimen/dp_size_64"
        android:text="我能告诉你的是明天的太阳是圆的！！"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/sp_size_16" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="64dp" />
</LinearLayout>